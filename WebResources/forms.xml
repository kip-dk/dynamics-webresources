<?xml version="1.0" encoding="utf-8" ?>
<forms>
  <form entity="account" name="Account" asname="AccountForm">
    <trigger type="onload" ctx="true">Kipon.Account.formLoad</trigger>
    <trigger type="onchange" field="primarycontactid" ctx="false">Kipon.Account.primaryContactChanged</trigger>
    <trigger type="onsave" ctx="false">Kipon.Account.onSave</trigger>
  </form>
  <form entity="contact" name="Contact" asname="ContactForm">
    <trigger type="onload" ctx="true">Kipon.Contact.formLoad</trigger>
    <trigger type="onchange" field="customerid" ctx="false">Kipon.Account.customerChanged</trigger>
    <trigger type="onsave" ctx="false">Kipon.Contact.onSave</trigger>
  </form>
</forms>